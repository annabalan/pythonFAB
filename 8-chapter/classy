# Classy Critter
# Demonstrates class attributes and static methods

class Critter(object):
  """A virtual pet"""
  total = 0
  @staticmethod
  def status():
    print("\nThe total number of critters is", Critter.total)

  def init_(self, name):
    print("A critter has been born!")
    self.name = name
    Critter.total +=1
    
